<html>
<head>
<style>
</style>

</head>
<body>

<ul class="menu2">
    <li class="menu2_link"><%= link_to 'Club', club_path(@club.id) %></li>
    <% if @club.admin_id == current_user.id %>
    <li class="menu2_link"><%= link_to 'New Event', {controller: "events", action: "new", id: @club.id}, method: "get"%>
    </li>
  <% end %>
</ul>


<p id="notice"><%= notice %></p>

<% if @events.count > 0 %>
  <h1>Listing Events</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Date</th>
        <th>Time</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td class="table-link"><%= link_to event.eventName , event%></td>
          <td><%= event.eventLocation %></td>
          <td><%= event.eventDate.strftime("%m/%d/%Y") %></td>
          <td><%= event.eventTime.strftime("%l:%M%P")  %></td>
          <% if @club.admin_id == current_user.id %>
            <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    There are currently no events for <%= @club.name %>. 
  </p>
  <br>

<% end %>

<br>

</body>
</html>
