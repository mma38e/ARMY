<body>

<!-- <div class = "menu"> -->
	<ul class="menu2">
		<li class="menu2_link"><%= link_to 'Create Club', new_club_path %></li>
		<li class="menu2_link"><%= link_to 'Join Club', join_path %> </li>
	</ul>


<!-- ## display list of clubs that a user belongs to
## otherwise  display message saying that there are no clubs to display-->
<% if @club_users.count('id') > 0 %>
	<h2>My Clubs</h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Club Name</th>
				<th>Status</th>
				<th>Role</th>
			</tr>
		</thead>
		<tbody>
			<% @club_users.each do |club_user| %>
			<tr>
				<td><%= link_to club_user.name, club_path(club_user.id) %></td>
				<td>
					<!-- logic to populate the status coloum
					if member has not been approved it displays a message
					saying pending aproval -->
					<% if club_user.approved == 't' %>
						Active
					<% else %>
						Pending Aproval
					<% end %>
				</td>
				<td>
					<!-- logic to populate the Role column -->
					<% if club_user.admin_id == current_user.id %>
						Admin
					<% else %>
						Member
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> You are currently not a member of any club.  Use the links above to either start a new club or join an existing club. 
	</p>
<% end %>
<br>

</body>
</html>
