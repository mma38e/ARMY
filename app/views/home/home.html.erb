<html>
<head>
<style>
ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}
li{
	display: inline;
}
</style>
</head>
<body>

<p>
<div class = "menu">
	<ul>
		<li><%= link_to 'Create Club', new_club_path %></li>
		<li><%= link_to 'Join Club', join_path %> </li>
	</ul>
</div>
</p>

<% if @club_users.count('id') > 0 %>
	<h2>My Clubs</h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Club Name</th>
				<th>Club Description</th>
				<th>Status</th>
				<th>Role</th>
			</tr>
		</thead>
		<tbody>
			<% @club_users.each do |club_user| %>
			<tr>
				<td><%= link_to club_user.name, club_path(club_user.id) %></td>
				<td><%= club_user.description %></td>
				<td>
					<% if club_user.approved == 't' %>
						Active
					<% else %>
						Pending Aproval
					<% end %>
				</td>
				<td>
					<% if club_user.admin_id == current_user.id %>
						Admin
					<% else %>
						Member
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> You are currently not a member of any club.  Use links above to either start a new club or join an existing club. 
	</p>
<% end %>
<br>

</body>
</html>
