<html>
<head>
<style>
ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
}
li{
	display: inline;
}
</style>
</head>
<body>



<ul class="menu2">
	<% if @club.admin_id == current_user.id %>
		<li class="menu2_link"><%= link_to 'Edit', edit_club_path(@club) %></li>
		<li class="menu2_link"><%= link_to 'Invite', {:controller => "clubs", :action => "invite", :id => @club.id}, :method => "get" %>
		</li>
	<% end %>
	<li class="menu2_link"><%= link_to 'Events', {controller: "events", action: "index", id: @club.id}, method: "get" %> </li>
	<li class="menu2_link"><%= link_to 'Blog' %> </li>
</ul>
<br>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @club.name %>
 <br>
  <strong>Description:</strong>
  <%= @club.description %>
</p>

<h2>Club Members</h2>
	<%= render 'member_list_user' %>
<br>


</body>
</html>
